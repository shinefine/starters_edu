
<h1></h1>
<div class="ui green horizontal label"><h2>培训班列表</h2></div>


<table class ="ui celled table segment">
  <thead>
    <tr>

      <th>名称</th>
      <th>编号</th>
      <th>班级类型</th>
      <th>培训教材</th>
      <th>班主任</th>
      <th>学员数量</th>
      <th>模拟考试</th>
      <th>听写</th>
      <th>开课日期</th>
      <th>结束日期</th>
      <th>考勤天数</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @training_classes.each do |training_class| %>
      <tr>
        <td><%= link_to training_class.name, training_class , {class:'ui purple button'} %></td>
        <td><%= training_class.code %></td>
        <td><%= training_class.exam_type %></td>
        <td><%= training_class.text_book.try(:name) %></td>
        <td><%= training_class.master_teacher.nil? ? "":  training_class.master_teacher.name %></td>
        <td><%= training_class.students.count %>人</td>

        <!--#link 培训班的模拟考列表-->
        <td><%=link_to "#{training_class.examinations.count}次",training_class_examinations_path(training_class) %></td>
        <td><%=link_to "#{training_class.dictations.count}次",training_class_dictations_path(training_class) %></td>
        <td><%= training_class.start_date %></td>
        <td><%= training_class.end_date %></td>
        <td><%=link_to "#{training_class.attendances.count}天",training_class_attendances_path(training_class) %></td>

        <% if current_user.employee? %>
            <td><%= link_to '修改', edit_training_class_path(training_class), {class:'ui green button'} %></td>
            <td><%= link_to '删除培训班', training_class, {class:'ui red button' ,method: :delete, data: { confirm: '确认删除?' } }%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.employee? %>
    <div class="ui buttons">
        <%= link_to '新建 SAT 培训班', new_training_class_path(exam_type: 'SAT'), {class:'ui blue button'}  %>
      <div class="or"></div>
        <%= link_to '新建 TOEFL 培训班', new_training_class_path(exam_type: 'TOEFL') , {class:'ui blue button'}%>
    </div>
<% end %>