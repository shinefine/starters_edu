<!--入口成绩和目标-->
<%exam =nil %>
<%score =nil %>
<div class="ui green label">TOEFL入口成绩和期望成绩</div>
<table class ="ui celled collapsing table segment">
  <thead>
  <tr>


    <th></th>

    <th>总分</th>
        <th >阅读</th>
        <th >听力 </th>
        <th >口语 </th>
        <th >写作 </th>
  </tr>
  </thead>

  <tbody>
  <% @student.entry_and_target_scores.where(exam_type:'TOEFL').each do |score|%>
      <tr>

        <td><%= score.score_type %></td>


        <td class="lightgreen"><%= score.try(:final_score) %></td>


            <!--听力-->
            <td class="lightgray"><%= score.try(:course_a_score) %></td>

            <!--口语-->
            <td class="lightgray"><%= score.try(:course_b_score) %></td>

            <!--阅读-->
            <td class="lightgray"><%= score.try(:course_c_score) %></td>


            <!--写作-->
            <td class="lightgray"><%= score.try(:course_d_score) %></td>

      </tr>
      <%end%>
  </tbody>
</table>

<div class="ui green label">SAT入口成绩和期望成绩</div>

<table class ="ui celled collapsing table segment">
  <thead>
  <tr>

    <th></th>

    <th>总分</th>
        <th  >Critical Reading</th>
        <th  >Mathematics</th>
        <th >Writing </th>



  </tr>
  </thead>
  <tbody>
  <% @student.entry_and_target_scores.where(exam_type:'SAT').each do |score|%>
      <tr>


        <td><%= score.score_type %></td>

        <td class="lightgreen"><%= score.try(:final_score) %></td>

            <td class="lightgray"><%= score.try(:course_a_score) %></td>

            <td class="lightgray"><%= score.try(:course_b_score) %></td>

            <td class="lightgray"><%= score.try(:course_c_score) %></td>


      </tr>
      <%end%>
  </tbody>
</table>

